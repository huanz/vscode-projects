{
  "name": "projects",
  "displayName": "Projects",
  "description": "Easily switch between projects",
  "version": "0.0.1",
  "publisher": "bukas",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^2.1.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "project",
    "folder",
    "switch",
    "manage"
  ],
  "icon": "images/icon.png",
  "homepage": "https://github.com/huanz/vscode-projects/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/huanz/vscode-projects.git"
  },
  "bugs": {
    "url": "https://github.com/huanz/vscode-projects/issues"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "projects.list",
        "title": "Projects: List Projects to Open"
      },
      {
        "command": "projects.listNewWindow",
        "title": "Projects: List Projects to Open in New Window"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Projects Configuration",
      "properties": {
        "projects.showProjectNameInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Should display the project name in the Status Bar?"
        },
        "projects.sortList": {
          "type": "string",
          "default": "Name",
          "description": "List the projects sorted by...(Saved, Name, Path or Recent)",
          "enum": [
            "Name",
            "Recent"
          ]
        },
        "projects.openInNewWindow": {
          "type": "boolean",
          "default": true,
          "description": "Should the project be opened using a New Window?"
        },
        "projects.projectsLocation": {
          "type": "string",
          "default": "",
          "description": "Indicates an alternative projects location"
        },
        "projects.vscode.ignoredFolders": {
          "type": "array",
          "default": [
            "node_modules",
            "out",
            "typings",
            "test"
          ],
          "description": "Indicates folders to be ignored, like \"node_modules\", \"out\", \"typings\", \"test\""
        }
      }
    },
    "keybindings": [
      {
        "command": "projects.list",
        "key": "shift+alt+p",
        "mac": "cmd+alt+p"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^2.1.4",
    "vscode": "^1.0.3"
  }
}
