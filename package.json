{
    "name": "projects",
    "displayName": "projects",
    "description": "easily switch between projects",
    "version": "0.0.1",
    "publisher": "bukas",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "project",
        "folder",
        "switch",
        "manage"
    ],
    "icon": "images/icon.png",
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "projects.list",
            "title": "Projects: List Projects to Open"
        }, {
            "command": "projects.reload",
            "title": "Projects: Reload Projects Location"
        }],
        "configuration": {
            "type": "object",
            "title": "Projects Configuration",
            "properties": {
                "projects.showProjectNameInStatusBar": {
                    "type": "boolean",
                    "default": true,
                    "description": "Should display the project name in the Status Bar?"
                },
                "projects.sortList": {
                    "type": "string",
                    "default": "name",
                    "description": "List the projects sorted by...(Saved, Name, Path or Recent)",
                    "enum": [
                        "name",
                        "recent"
                    ]
                },
                "projects.openInNewWindow": {
                    "type": "boolean",
                    "default": true,
                    "description": "Should the project be opened using a New Window?"
                },
                "projects.projectsLocation": {
                    "type": "string",
                    "default": "",
                    "description": "Indicates an alternative projects location"
                },
                "projects.ignoredFolders": {
                    "type": "array",
                    "default": [
                        "node_modules"
                    ],
                    "description": "Indicates folders to be ignored, like \"node_modules\", \"out\", \"typings\", \"test\""
                }
            }
        },
        "keybindings": [{
            "command": "projects.list",
            "key": "shift+alt+p",
            "mac": "cmd+alt+p"
        }]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}